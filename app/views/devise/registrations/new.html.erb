<div class="container-sign-up">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <div class="form-signin">
        <h2>CEZIAM</h2>
      　<p>We are concerned about Security. That is why we ask for you to register to get the full report.</p>
      　　<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      　　<%= f.error_notification %>
      　<div class="form-inputs">
          <%= f.input :firstname, autofocus: true %>
          <%= f.input :lastname %>
          <%= f.input :company %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
      　</div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "button-signin" %>
        </div>
      　<% end %>

      　<%= render "devise/shared/links" %>

        <hr>
        <div class="sns-login">
          <a href="#" class="sns-login">Use Google +</a>
          <a href="#" class="sns-login">Use Facebook</a>
        </div>

      </div>
    </div>
  </div>
</div>



